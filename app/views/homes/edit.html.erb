<h1>物件編集</h1>
<%= form_for @home do |f| %>
  <% if @home.errors.any? %>
    <% @home.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <div class="form-control">
    <%= f.label :name, "物件名" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="form-control">
    <%= f.label :rent, "賃料" %><br />
    <%= f.text_field :rent %>円
  </div>
  <div class="form-control">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
  </div>
  <div class="form-control">
    <%= f.label :age, "築年数" %><br />
    <%= f.text_field :age %>年
  </div>
  <div class="form-control">
    <%= f.label :remarks, "備考" %><br />
    <%= f.text_area :remarks %>
  </div>
  <hr />
    <%= f.fields_for :stations do |st| %>
    <h3>最寄り駅<%= st.index+1 %></h3>
    <div class="form-control">
      <%= st.label :line, "路線名" %><br />
      <%= st.text_field :line %>
    </div>
    <div class="form-control">
      <%= st.label :station, "駅名" %><br />
      <%= st.text_field :station %>
    </div>
    <div class="form-control">
      <%= st.label :walk, "徒歩分数" %><br />
      <%= st.text_field :walk %>分
    </div>
  <% end %>
  <%= f.submit "登録する" %>
<% end %>
<br />
<%= link_to "詳細",  home_path(@home.id) %>&nbsp;|
<%= link_to "戻る", :back %>
