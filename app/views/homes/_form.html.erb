<%= form_for(@home) do |f| %>
  <%= f.label :rent %>
  <%= f.text_field :rent %>円
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :age %>
  <%= f.text_field :age %>年
  <%= f.label :remarks %>
  <%= f.text_area :remarks %>
    <%= fields_for @home.station do |st| %>
      <%= st.label :line %>
      <%= st.text_field :line %>
      <%= st.label :station %>
      <%= st.text_field :station %>
      <%= st.label :walking %>
      <%= st.text_field :walking %>
    <% end %>
  <%= f.submit %>
<% end %>
