<%= form_for @home , url: homes_path do |f| %>
  <div class="form-control">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="form-control">
    <%= f.label :rent %><br />
    <%= f.text_field :rent %>円
  </div>
  <div class="form-control">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="form-control">
    <%= f.label :age %><br />
    <%= f.text_field :age %>年
  </div>
  <div class="form-control">
    <%= f.label :remarks %><br />
    <%= f.text_area :remarks %>
  </div>
  <hr />
  <% 2.times do |times| %>
  <p>最寄り駅<%= "#{times+1}" %></p>
    <%= f.fields_for :stations do |st| %>
      <div class="form-control">
        <%= st.label :line %><br />
        <%= st.text_field :line %>
      </div>
      <div class="form-control">
        <%= st.label :station %><br />
        <%= st.text_field :station %>
      </div>
      <div class="form-control">
        <%= st.label :walk %><br />
        <%= st.text_field :walk %>
      </div>
    <% end %>
  <% end %>
  <%= f.submit "登録する" %>
<% end %>
